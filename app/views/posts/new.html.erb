<section class="container">
  <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
      <div id="errorExplanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="flex-row col-flex">
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title, size: "50x12", placeholder: "Write your title here..." %>
      </p>
      <p>
        <%= f.label :text %><br>
        <%= f.text_area :text, size: "50x12", placeholder: "Write your title here..."  %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    </div>
  <% end %>
</section>
