<section class="container">
  <%= form_with model: comment, url: user_post_comments_url(@user, @post), method: :post, class: "form-control" do |form| %>
    <div>
      <%= form.label :text, class: "form-label"%><br>
      <%= form.text_area :text, placeholder: "Type your comment here!", rows: 10, required: true, class: "form-control m-2 w-75" %>
    </div>
    <div>
      <%= form.submit class: "btn btn-success" %>
    </div>
  <% end %>
</section>
